<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp1">

    <Style TargetType="Window" x:Key="WindowStyle">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6" Offset="0.0"/>
                    <GradientStop Color="#f083da" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <PathGeometry x:Key="Krog">
        <PathFigure StartPoint="300, 130">
            <ArcSegment IsLargeArc="True" Size="20, 20" Point="297, 130" SweepDirection="Clockwise"/>
        </PathFigure>
    </PathGeometry>

    <PathGeometry x:Key="Krog2">
        <PathFigure StartPoint="300, 130">
            <ArcSegment IsLargeArc="True" Size="20, 20" Point="297, 130" SweepDirection="Counterclockwise"/>
        </PathFigure>
    </PathGeometry>

</ResourceDictionary>