<Window x:Class="HibridnoSifriranje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HibridnoSifriranje"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Click="receiveBtn_Click" x:Name="receiveBtn" Width="150" Height="50" Grid.Row="0" Content="Receive File" FontWeight="Light" Foreground="White" Background="DarkSlateGray" BorderThickness="0" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Click="selectBtn_Click" x:Name="selectBtn" Width="150" Height="50" Grid.Column="0" Content="Select File" FontWeight="Light" Foreground="White" Background="DarkCyan"  BorderThickness="0" />
            <Button Click="sendBtn_Click" x:Name="sendBtn" Width="150" Height="50" Grid.Column="1" Content="Send File" FontWeight="Light" Foreground="White" Background="DarkCyan" BorderThickness="0" />
        </Grid>
    </Grid>
</Window>
